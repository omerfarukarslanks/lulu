{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lulu/decorator": ["libs/decorator/src/index.ts"],
      "@lulu/guard": ["libs/guard/src/index.ts"],
      "@lulu/model": ["libs/model/src/index.ts"],
      "@lulu/service": ["libs/service/src/index.ts"],
      "@lulu/translations": ["libs/translations/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
