// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  phoneNumber String
  shop        Shop[]
  type        CompanyType?
  isActive    Boolean
}

model Shop {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  name        String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  phoneNumber String
  isActive    Boolean
  user        User[]
  customer    Customer[]
  supplier    Supplier[]

  company   Company? @relation(fields: [companyId], references: [id])
  companyId Int?
}

model User {
  id          Int      @id @default(autoincrement()) //uuid
  email       String   @unique
  name        String
  phoneNumber String
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roleIds     Json
  isActive    Boolean
  shopId      Int
  shop        Shop     @relation(fields: [shopId], references: [id])
}

model Customer {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  name        String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  phoneNumber String
  type        CustomerType?
  roleIds     Json
  isActive    Boolean
  shopId      Int
  shop        Shop          @relation(fields: [shopId], references: [id])
}

model Supplier {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  phoneNumber String
  roleIds     Json
  isActive    Boolean
  shopId      Int
  shop        Shop     @relation(fields: [shopId], references: [id])
}

model Role {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  permissions Json
  isActive    Boolean
}

enum CompanyType {
  INDIVIDUAL
  COMPANY
}

enum CustomerType {
  INDIVIDUAL
  COMPANY
}
